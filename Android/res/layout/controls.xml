<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/CheckBox01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/soft_edges" />

    <CheckBox
        android:id="@+id/medianFilteringCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/median_filtering" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/threshold"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="@integer/threshold_max"
        android:progress="@integer/threshold_default" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kernel_description"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <GridLayout
        android:id="@+id/kernel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:columnCount="3"
        android:columnOrderPreserved="true"
        android:rowCount="3"
        android:rowOrderPreserved="true" >

        <EditText
            android:id="@+id/kernel_cell_11"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/kernel_cell_12"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/kernel_cell_13"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/kernel_cell_21"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/kernel_cell_22"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/kernel_cell_23"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/kernel_cell_31"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/kernel_cell_32"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/kernel_cell_33"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:inputType="numberSigned" />

    </GridLayout>
    
</LinearLayout>